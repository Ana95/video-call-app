<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CallingActivity">

    <ImageView
        android:id="@+id/calling_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/default_profile_woman"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/name_calling"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nikolina Rudic"
        android:textSize="25dp"
        android:fontFamily="@font/bungee"
        android:textColor="#000"
        android:maxLines="5"
        android:gravity="center"
        android:layout_above="@id/txt"/>

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/calling"
        android:textSize="20dp"
        android:textColor="#000"
        android:maxLines="5"
        android:gravity="center"
        android:layout_above="@id/linear_layout1"/>

    <LinearLayout
        android:id="@+id/linear_layout1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/make_call"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/make_call"
            android:layout_marginRight="80dp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/cancel_call"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/call_cancelled" />

    </LinearLayout>

</RelativeLayout>