<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <ImageView
        android:id="@+id/img_contact"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/default_profile_woman"/>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="150dp"
        android:orientation="vertical"
        android:layout_marginLeft="5dp">

        <TextView
            android:id="@+id/contact_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:text="Nikolina Rudic"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/contact_phone"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="-3dp"
            android:text="+381654672257"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="end"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/video_call_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/my_layer_list"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/add_friend_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/my_layer_list1"
            android:visibility="gone"/>

        <Button
            android:id="@+id/cancel_request"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="@string/cancel_btn"
            android:textColor="@color/colorPrimary"
            style="?android:attr/borderlessButtonStyle"
            android:textAllCaps="false"
            android:background="#63ECD9CF"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="50dp"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/notification_layout"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="end" >

            <ImageView
                android:id="@+id/close_notification"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_close_black_15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginTop="-10dp">

                <Button
                    android:id="@+id/accept_request"
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:background="#0DC0B0"
                    android:text="@string/accept_btn"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:layout_gravity="center_vertical"
                    style="?android:attr/borderlessButtonStyle" />

                <Button
                    android:id="@+id/delete_request"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/button_border"
                    android:text="@string/delete_btn"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/friends_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/friends_button_border"
                    android:drawableRight="@drawable/green_circle"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:padding="3dp"
                    android:drawablePadding="-8dp"
                    android:text="@string/friends_btn"
                    android:textAllCaps="false"
                    android:textStyle="normal"
                    android:textColor="#0DC0B0"
                    android:visibility="gone"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>